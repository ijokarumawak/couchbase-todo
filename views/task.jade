extends logged-in

block content
  a(class="btn btn-primary", href="/edit-task/" + id) Edit Task
  div
    span Subject:
    span= task.subject
  div
    span Description:
    span= task.desc
  div
    span Start Date:
    span= task.startDate
    span End Date:
    span= task.endDate
  div
    if task.body
      != marked(task.body)
