extends logged-in

block content
  div(class='page-header')
    h1= task.subject
      small= ' ' + task.desc
    ul(class='breadcrumb')
      li
        a(href="/projects/" + task.project)= task.project
        span(class='divider') /
      li(class='active')= id
    a(class="btn btn-primary", href="/edit-task/" + id) Edit Task
  div
    span Start Date:
    span= task.startDate
    span End Date:
    span= task.endDate
  div
    if task.body
      != marked(task.body)
