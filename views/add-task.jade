extends layout

block content
  form(method="post", action="/tasks")
    div
      label(for="project") Project:
      input(type="text", name="project", value=project)
    div
      label(for="subject") Subject:
      input(type="text", name="subject", class="input-xxlarge")
    div
      label(for="desc") Description:
      input(type="text", name="desc", class="input-xxlarge")
    div
      label(for="startDate") Start date:
      input(type="text", name="startDate")
    div
      label(for="endDate") End date:
      input(type="text", name="endDate")
    div
      label(for="body") Body:
      textarea(name="body", class="input-xxlarge")
    div
      button(class="btn btn-primary", type="submit") Submit
      a(class="btn", href="javascript:history.back()") Cancel
