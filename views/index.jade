extends layout

block content
  a(class="btn btn-primary",href="/login") Login
  a(class="btn btn-primary",href="/add-task") Add Task
  a(class="btn btn-primary",href="/add-project") Add Project
  div
    div
      ul(class="thumbnails")
        - each project in projects
          li(class="span4")
            div(class="thumbnail")
              h3= project.name
              a(href="/projects/" + project.id, class="btn btn-primary")= project.id
