extends logged-in
include mixins/form.jade

block content
  form(method="post", action="/projects/" + id)
    mixin readonlyField({id: id}, 'text', 'id', 'ID')
    mixin field(project, 'text', 'name', 'Name')
    mixin largeField(project, 'text', 'desc', 'Description')
    mixin markdownInput(project, 'body', 'Body')
    mixin submitButtons
block script
  mixin markdownInputScript(['body'])

